package com.vectails.data;

import java.util.ArrayList;
import java.util.List;

import org.w3c.dom.Element;
import org.w3c.dom.Node;
import org.w3c.dom.NodeList;

public class AllowedQuoteCreators {
	
	private List<QuoteCreator> myList = new ArrayList<QuoteCreator>();
	
	@Override
	public String toString() {
		return "AllowedQuoteCreators [myList=" + myList + "]";
	}

	public void parseXmlElement(Element root) {	// root = <Legs>
		NodeList nodes = root.getChildNodes();
		int lenNodes = nodes.getLength();
		
		for (int k = 0; k < lenNodes; k++) {
			Node n = nodes.item(k);
			if (n.getNodeType() == Node.ELEMENT_NODE 
					&& IXmlTag.QuoteCreator.toString().equals(n.getNodeName())) {	// process each <Leg>
				QuoteCreator o = new QuoteCreator();
				o.parseAttribute((Element)n);
				o.parseXmlElement((Element)n);
//				o.parseAttribute((Element)n);
//				o.parseLeaveNodes((Element)n);
				myList.add(o);
			}
		}
	}
}
