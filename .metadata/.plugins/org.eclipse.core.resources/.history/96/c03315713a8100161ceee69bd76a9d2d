package com.vectails.data;

import java.util.ArrayList;
import java.util.List;

import org.w3c.dom.Element;
import org.w3c.dom.Node;
import org.w3c.dom.NodeList;

public class Addressees {
	
	List<Leg> legsList = new ArrayList<Leg>();
	
	@Override
	public String toString() {
		StringBuilder sb = new StringBuilder();
		sb.append("Addressees [");
		for (Leg l: legsList) {
			sb.append(l.toString()).append(", ");
		}
		sb.append("]");
		return sb.toString();
//		return "DerivativeType [code=" + code + ", name=" + name + ", IsPriceInPercent=" + IsPriceInPercent
//				+ ", LegCount=" + LegCount + ", IsBasic=" + IsBasic + ", UnderlyingClass=" + UnderlyingClass
//				+ ", LastUpdateDateTime=" + LastUpdateDateTime + "]";
	}
	
	public void parseXmlElement(Element root) {	// root = <Legs>
		NodeList nodes = root.getChildNodes();
		int lenNodes = nodes.getLength();
		
		for (int k = 0; k < lenNodes; k++) {
			Node n = nodes.item(k);
			
			if (n.getNodeType() == Node.ELEMENT_NODE 
					&& IXmlTag.Addressee.toString().equals(n.getNodeName())) {	// process each <Leg>
				Addressee o = new Addressee();
				o.parseAttribute((Element)n);
				legsList.add(o);
			}
		}
	}
}
