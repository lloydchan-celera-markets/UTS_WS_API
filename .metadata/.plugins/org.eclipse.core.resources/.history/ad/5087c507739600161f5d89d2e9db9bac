package com.celera.message.cmmf;

import java.nio.ByteBuffer;

public class CmmfBuilder
{

	public static byte[] buildMessage(EApp sender, ECommand type, byte[] body) {
		int cap = body.length + 2;
		byte[] combine = new byte[cap];
		combine[0] = (byte)sender.asChar();
		combine[0] = (byte)type.asChar();
		ByteBuffer buf = ByteBuffer.allocate(cap);
		buf.put((byte)sender.asChar());
		buf.put((byte)type.asChar());
		buf.put(body);
		return buf.array();
	}
}
