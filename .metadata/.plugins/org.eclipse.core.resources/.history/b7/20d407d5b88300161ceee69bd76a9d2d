package com.vectails.data;

import java.util.ArrayList;
import java.util.List;

import org.w3c.dom.Element;
import org.w3c.dom.Node;
import org.w3c.dom.NodeList;

public class UnderlyingType implements IXmlParser{
	
	private String FinancialMarketCode = null; 
	private String UnderlyingTypeCode = null; 

	List<String> myList = new ArrayList<String>();	// UnderlyingCode
	
	public void setFinancialMarketCode(String financialMarketCode) {
		FinancialMarketCode = financialMarketCode;
	}

	public void setUnderlyingTypeCode(String underlyingTypeCode) {
		UnderlyingTypeCode = underlyingTypeCode;
	}

	public void setMyList(List<String> myList) {
		this.myList = myList;
	}

	@Override
	public String toString() {
		StringBuilder sb = new StringBuilder();
		sb.append("UnderlyingType [ FinancialMarketCode=").append(FinancialMarketCode);
		sb.append(", UnderlyingTypeCode=").append(UnderlyingTypeCode).append(", ");
		for (String l: myList) {
			sb.append(l.toString()).append(", ");
		}
		sb.append("] ");
		return sb.toString();
	}
	
	public void parseXmlElement(Element root) {	// root = <Legs>
		NodeList nodes = root.getChildNodes();
		int lenNodes = nodes.getLength();
		
		for (int k = 0; k < lenNodes; k++) {
			Node n = nodes.item(k);
			
			if (n.getNodeType() == Node.ELEMENT_NODE 
					&& IXmlTag.UnderlyingCode.toString().equals(n.getNodeName())) {	// process each <Leg>
				myList.add(n.getTextContent());
			}
		}
	}
}
