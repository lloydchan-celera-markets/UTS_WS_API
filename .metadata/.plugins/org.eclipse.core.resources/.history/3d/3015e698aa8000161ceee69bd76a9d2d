package com.vectails.data;

import java.util.ArrayList;
import java.util.List;

import org.w3c.dom.Element;
import org.w3c.dom.Node;
import org.w3c.dom.NodeList;

public class UnderlyingType implements IXmlParser{
	
	private String FinancialMarketCode = null; 
	private String UnderlyingTypeCode = null; 

	List<UnderlyingCode> myList = new ArrayList<UnderlyingCode>();
	
	@Override
	public String toString() {
		StringBuilder sb = new StringBuilder();
		for (UnderlyingCode l: myList) {
			sb.append(l.toString());
		}
		return sb.toString();
	}
	
	public void parseXmlElement(Element root) {	// root = <Legs>
		NodeList nodes = root.getChildNodes();
		int lenNodes = nodes.getLength();
		
		for (int k = 0; k < lenNodes; k++) {
			Node n = nodes.item(k);
			
			if (n.getNodeType() == Node.ELEMENT_NODE 
					&& IXmlTag.UnderlyingCode.toString().equals(n.getNodeName())) {	// process each <Leg>
				myList.add(n.getNodeValue());
			}
		}
	}
}
